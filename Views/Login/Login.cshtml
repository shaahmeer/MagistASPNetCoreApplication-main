@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 400px;
        margin: 0 auto; /* Center the form horizontally */
        padding: 20px;
        background-color: #fff; /* White background for the form */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }

    .form-group {
        margin-bottom: 1.5rem; /* Spacing between form elements */
    }

    .form-group label {
        font-weight: bold;
        color: #555; /* Dark gray text color */
    }

    .login-button {
        padding: 10px 20px;
        font-size: 1rem;
        border: none;
        border-radius: 5px;
        background-color: #007bff; /* Blue color for the button */
        color: #fff; /* White text color */
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .login-button:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="form-container p-4">
                <h1 class="text-center mb-4">Login</h1>
                <form method="post" asp-action="Login" asp-controller="Login">
                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input asp-for="Login" class="form-control" name="Login" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password:</label>
                        <input asp-for="Password" class="form-control" type="password" name="Password" />
                    </div>
                    @ViewData["Message"]
                    <button type="submit" class="btn btn-success login-button">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>
